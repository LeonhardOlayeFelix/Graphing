<UserControl x:Class="Graphing.Views.RibbonHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Graphing.Views"
             xmlns:ViewModel="clr-namespace:Graphing.ViewModels"
            xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ViewModel:ViewModelLocator x:Key="Locator"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Path="RibbonHostViewModel" Source="{StaticResource Locator}"/>
    </UserControl.DataContext>
    <Grid>
        <syncfusion:Ribbon>

            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar>
                    <syncfusion:QuickAccessToolBar.QATMenuItems>
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Save" Label="Save" />
                    </syncfusion:QuickAccessToolBar.QATMenuItems>
                    <syncfusion:RibbonButton
                         syncfusion:RibbonCommandManager.SynchronizedItem="Undo"
                        Command="{Binding UndoCommand}"
                        Label="Undo"
                        SizeForm="ExtraSmall"
                        IconTemplate="{StaticResource Undo}"
                        ToolTip="Undo" />
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Redo"
                        Command="{Binding RedoCommand}"
                        Label="Redo"
                        SizeForm="ExtraSmall"
                        IconTemplate="{StaticResource Redo}"
                        ToolTip="Redo" />       
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Save"
                        Command="{Binding SaveCommand}"
                        SizeForm="ExtraSmall"
                        IconTemplate="{StaticResource Save}" />
                </syncfusion:QuickAccessToolBar>
            </syncfusion:Ribbon.QuickAccessToolBar>

            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage Name="ribbonBackStage" PlacementType="BelowTab">
                    <syncfusion:BackStageCommandButton Command="{Binding SaveCommand}" Header="Save" />
                    <syncfusion:BackStageCommandButton Command="{Binding SaveAsCommand}" Header="Save As" />
                    <syncfusion:BackStageCommandButton Command="{Binding OpenCommand}" Header="Open" />
                    <syncfusion:BackstageTabItem Header="Info">
                        <Grid Margin="10">
                            <StackPanel>
                                <TextBlock FontSize="20" FontWeight="Bold" Text="Application information" />
                                <TextBlock Margin="0,10,0,0" Text="Put About / Help content here." TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackStageCommandButton Command="{Binding BackStageExitCommand}" Header="Exit" />
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>

            <!-- Graph Tab-->
            <syncfusion:RibbonTab Caption="Graph" IsChecked="True">
                
                <syncfusion:RibbonBar Header="Edit">
                    <!--Add Node-->
                    <syncfusion:RibbonButton SizeForm="Small" Label="Add Node"/>
                    <!--Add Edge-->
                    <syncfusion:RibbonButton SizeForm="Small" Label="Add Edge"/>
                    <!--Delete Component-->
                    <syncfusion:RibbonButton SizeForm="Small" Label="Delete Component"/>
                    <!--Clear Graph-->
                    <syncfusion:RibbonButton SizeForm="Large" Label="Clear Graph"/>
                    <!--Delete Component-->
                    <syncfusion:RibbonButton SizeForm="Large" Label="Generate Graph"/>
                </syncfusion:RibbonBar>

                <syncfusion:RibbonBar Header="Select">
                    <!--Add Node-->
                    <syncfusion:RibbonButton SizeForm="Large" Label="Component Selector"/>
                    <!--Add Edge-->
                    <syncfusion:RibbonButton SizeForm="Large" Label="Drag and Drop"/>
                    <!--Clear Graph-->
                    <syncfusion:RibbonButton SizeForm="Large" Label="Select All"/>
                    <!--Delete Component-->
                    <syncfusion:RibbonButton SizeForm="Small" Label="DEL" />
                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>



           

        </syncfusion:Ribbon>
    </Grid>
</UserControl>
